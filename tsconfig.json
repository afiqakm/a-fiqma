{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",    // modern Node module system
    "target": "esnext",
    "lib": ["esnext"],       // modern JS features
    "types": ["node"],       // Node.js type definitions

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],   // only compile src folder
  "exclude": ["node_modules", "dist"]
}
